    "@types/node": "^14.14.17",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@types/react-redux": "^7.1.14",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-table": "^7.0.26",
    "@types/react-tabs": "^2.3.2",
    "@types/tti-polyfill": "^0.2.0",
    "@types/webpack-env": "^1.16.0",
    "ajv": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "faunadb": "^4.0.0",
    "http-proxy-middleware": "^1.0.6",
    "jest-enzyme": "^7.1.2",
    "localforage": "^1.9.0",
    "lodash": "^4.17.20",
    "mdx.macro": "^0.2.9",
    "netlify-identity-widget": "^1.9.1",
    "random-js": "^2.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-ga": "^3.3.0",
    "react-hook-form": "^6.14.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "react-table": "^7.6.2",
    "react-tabs": "^3.1.2",
    "react-test-renderer": "^16.14.0",
    "redux-persist": "^6.0.0",
    "source-map-explorer": "^2.5.1",
    "ts-is-present": "^1.2.1",
    "tti-polyfill": "^0.2.2",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "bootstrap": "node ./scripts/bootstrap-db.js",
    "start": "run-p start:app start:server",
    "start:app": "craco start",
    "start:server": "netlify-lambda serve functions",
    "build": "run-p build:app build:functions",
    "build:app": "craco build",
    "build:functions": "netlify-lambda build functions",
    "test": "craco test --env=jsdom",
    "eject": "react-scripts eject",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "eslint --fix --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'"
  },
  "scriptsComments": {
    "start": "Runs development build on a local server configured by server.js",
    "build": "Builds the static production build",
    "test": "Runs the tests in interactive mode, remove --env flag is `jsdom` is needed"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "src/vendor"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@tailwindcss/typography": "^0.3.1",
    "autoprefixer": "^9.8.6",
    "chalk": "^4.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.0",
    "netlify-lambda": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.35",
    "prettier": "^1.19.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2"
  }
}
