{
  "name": "dnd-character-app",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.2.4",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.7.1",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-table": "^7.0.9",
    "@types/react-tabs": "^2.3.1",
    "@types/tti-polyfill": "^0.2.0",
    "@types/webpack-env": "^1.15.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest-enzyme": "^7.1.2",
    "localforage": "^1.7.3",
    "lodash": "^4.17.15",
    "mdx.macro": "^0.2.9",
    "random-js": "^2.1.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-ga": "^2.7.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.1",
    "react-table": "^7.0.0-rc.16",
    "react-tabs": "^3.1.0",
    "react-test-renderer": "^16.12.0",
    "redux-persist": "^6.0.0",
    "source-map-explorer": "^2.2.2",
    "tti-polyfill": "^0.2.2",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "eslint --fix --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js'",
    "build:styles": "postcss src/tailwind.css -o src/styles.css",
    "prebuild": "NODE_ENV=production npm run build:styles",
    "prestart": "npm run build:styles"
  },
  "scriptsComments": {
    "start": "Runs development build on a local server configured by server.js",
    "build": "Builds the static production build",
    "test": "Runs the tests in interactive mode, remove --env flag is `jsdom` is needed"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "src/vendor"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "autoprefixer": "^9.7.4",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.2.0",
    "tailwindcss-dark-mode": "^1.1.2"
  }
}
